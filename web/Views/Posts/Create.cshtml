@model web.Models.Posts
@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Create";
}
@inject UserManager<ApplicationUser> UserManager


<div class = "posts_container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    
                    <input asp-for="PostID" class="form-control" placeholder="PostID"/>
                    <input asp-for="UserID" class="form-control" placeholder="UserID"/>
                
                </div>
                <div class="form-group">
                
                    <textarea asp-for="Content" class="content_area" placeholder="Content"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    @Html.HiddenFor(model => model.PostTime, new { @value = DateTime.Today, @readonly = "readonly", @hidden = "true"})
                    <span asp-validation-for="PostTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="create_button" />
                </div>
            </form>
        </div>
    </div>
    
</div>


